{
  "manifest_version": 2,
  "name": "downlod youtube video with rapidapi.com",
  "version": "0.5.1",
  "description": "Download and convert youtube videos with getvideo.p.rapidapi.com",
  
  "applications": {
    "gecko": {
      "strict_min_version": "54.0"
    }
  },
  
  "permissions": [
    "tabs",
  	"storage",
  	"contextMenus",
    "downloads",
    "downloads.open"
  ],
  
  "icons": {
    "16": "icons/favicon.png",
    "32": "icons/favicon.png",
    "48": "icons/favicon.png"
  },

  "page_action": {
    "default_icon": "icons/favicon.png",
    "default_title": "Convert/download",
    "default_popup": "popup/popup.html"
  },
  
  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options/options.html"
  }
}
